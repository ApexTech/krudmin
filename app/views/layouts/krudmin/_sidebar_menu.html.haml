.sidebar
  %nav.sidebar-nav
    %ul.nav
      %li.nav-title
        Menu
      - menu_items.each do |item|
        - if item.items.any?
          %li.nav-item.nav-dropdown
            = link_to(item.link, class: "nav-link nav-dropdown-toggle") do
              %i{class: "fa fa-#{item.icon}"}
              = t(item.label)
            %ul.nav-dropdown-items
              - item.each do |child_item|
                %li.nav-item
                  = link_to(child_item.link, class: "nav-link") do
                    %i{class: "fa fa-#{child_item.icon}"}
                    = child_item.label
        - else
          %li.nav-item
            = link_to(item.link, class: "nav-link") do
              %i{class: "fa fa-#{item.icon}"}
              = t(item.label)
        %li.divider
  %button.sidebar-minimizer.brand-minimizer{type: "button"}
